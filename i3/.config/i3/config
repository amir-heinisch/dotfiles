# {{{ # Shortcuts #

# Restart i3.
bindsym $mod+Shift+r restart

# Application kill.
bindsym $mod+q kill
# Disable default for other applications.
bindsym Ctrl+q nop

# Fullscreen.
bindsym $mod+f fullscreen toggle
popup_during_fullscreen leave_fullscreen

# Change spawn direction.
bindsym $mod+e layout toggle split

# Floating mode.
bindsym $mod+Shift+space floating toggle

# Switch workspaces.
bindsym $mod+o workspace next
bindsym $mod+i workspace prev

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3 
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# Change window focus.
bindsym $mod+h focus left
bindsym $mod+Left focus left
bindsym $mod+l focus right
bindsym $mod+Right focus right
bindsym $mod+k focus up
bindsym $mod+Up focus up
bindsym $mod+j focus down
bindsym $mod+Down focus down

# Move windows.
bindsym $mod+Shift+h move left
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+k move up
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+j move down
bindsym $mod+Shift+Down move down

# Move window to workspace.
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

# Enable pip mode for current window.
bindsym $mod+s fullscreen disable; floating enable; resize set 600 400; sticky enable; move window to position 1940 54

# Scratchpad. NOTE! Just an idea to get simple dropdown terminal.
# bindsym $mod+Shift+m move scratchpad
# bindsym $mod+Shift+v scratchpad show; resize set 1880 350; move position 20 685
# bindsym $mod+n scratchpad show; resize set 1885 1020; move position 20 20
# bindsym $mod+n scratchpad show; resize set 1885 1020; move absolute position center
# bindsym $mod+a focus parent
# bindsym $mod+Shift+a focus child

## {{{ ## Special keys ##

# Volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume "@DEFAULT_SINK@" -5% && killall -USR1 i3status
bindsym $mod+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume "@DEFAULT_SINK@" -5% && killall -USR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume "@DEFAULT_SINK@" +5% && killall -USR1 i3status
bindsym $mod+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume "@DEFAULT_SINK@" +5% && killall -USR1 i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute "@DEFAULT_SINK@" toggle
bindsym $mod+XF86AudioMute exec --no-startup-id pactl set-sink-mute "@DEFAULT_SINK@" toggle

# Brigthness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# Screenshot
bindsym Print exec --no-startup-id zsh -c screenshot

