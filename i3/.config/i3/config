# {{{ # General #

# Set i3 action key.
set $mod Mod4

# Define workspace names.
set $ws1  "1:  "
set $ws2  "2:  "
set $ws3  "3:  "
set $ws4  "4:  "
set $ws5  "5:  "
set $ws6  "6:  "
set $ws7  "7:  "
set $ws8  "8:  "
set $ws9  "9:  " 

# Define monitors for workspaces.
workspace $ws1 output HDMI-1 HDMI-2 DP-1 DP-2 eDP-1
workspace $ws2 output HDMI-1 HDMI-2 DP-1 DP-2 eDP-1
workspace $ws3 output HDMI-1 HDMI-2 DP-1 DP-2 eDP-1
workspace $ws4 output HDMI-1 HDMI-2 DP-1 DP-2 eDP-1
workspace $ws5 output HDMI-1 HDMI-2 DP-1 DP-2 eDP-1
workspace $ws6 output HDMI-1 HDMI-2 DP-1 DP-2 eDP-1
workspace $ws7 output HDMI-1 HDMI-2 DP-1 DP-2 eDP-1
workspace $ws8 output eDP-1
workspace $ws9 output eDP-1

