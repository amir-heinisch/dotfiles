# {{{ AUTOSTART #

# Start some security stuff.
#exec --no-startup-id usbguard-applet-qt

# Start compositor.
exec_always --no-startup-id compton -b

# Set wallpaper.
exec_always --no-startup-id feh --no-fehbg --bg-fill ~/Pictures/Wallpapers/hoddy.png

# Enable notifications.
exec_always --no-startup-id dunst &

# Enable tablet mode.
exec_always --no-startup-id watchTablet &

# Start terminal.
exec_always --no-startup-id guake --hide
for_window [class="guake"] floating disable

no_focus [class="firefox"]
exec_always --no-startup-id i3-msg "workspace $ws1; exec firefox --no-remote -P dashboard --private --kiosk https://n-tv.de"
exec_always --no-startup-id i3-msg "workspace $ws8; exec firefox --no-remote -P social; exec signal-desktop; exec firefox --no-remote -P media"

