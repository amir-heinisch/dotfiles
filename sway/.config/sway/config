# {{{ # Keys #

# Drag and resize windows.
floating_modifier $mod normal

# Disable default for most applications.
bindsym Ctrl+q nop

# Start terminal.
bindsym $mod+Return exec $terminal

# Kill focused window.
bindsym $mod+q kill

# Mako notifications.
bindsym $mod+n exec makoctl dismiss
bindsym $mod+Shift+n exec makoctl restore
bindsym $mod+Ctrl+n exec makoctl menu wofi -d -p 'Select Action: '

# swaylock
bindsym $mod+Ctrl+l exec swaylock

# Gopass
bindsym $mod+p exec gopass ls --flat | wofi -d -p gopass | xargs --no-run-if-empty gopass show -c

# Rofi
# bindsym $mod+l exec iwlist wlp2s0 scanning | grep ESSID | cut -d\" -f2 | rofi -dmenu

# Start launcher.
bindsym $mod+space exec "swaymsg fullscreen disable; wofi --show=drun"

# Reload configuration file.
bindsym $mod+Shift+r reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

# Fullscreen.
bindsym $mod+f fullscreen

# Change spawn direction.
bindsym $mod+e layout toggle split

# Floating mode.
bindsym $mod+Shift+space floating toggle

# Switch workspaces.
bindsym $mod+o workspace next
bindsym $mod+i workspace prev

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3 
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# Change window focus.
bindsym $mod+h focus left
bindsym $mod+Left focus left

bindsym $mod+l focus right
bindsym $mod+Right focus right

bindsym $mod+k focus up
bindsym $mod+Up focus up

bindsym $mod+j focus down
bindsym $mod+Down focus down

# Move windows.
bindsym $mod+Shift+h move left
bindsym $mod+Shift+Left move left

bindsym $mod+Shift+l move right
bindsym $mod+Shift+Right move right

bindsym $mod+Shift+k move up
bindsym $mod+Shift+Up move up

bindsym $mod+Shift+j move down
bindsym $mod+Shift+Down move down

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

# Enable pip mode for current window.
#bindsym $mod+s fullscreen disable; floating enable; resize set 600 400; sticky enable; move window to position 1940 54
# bindsym $mod+a focus parent
# bindsym $mod+Shift+a focus child

# Scratchpad.
bindsym $mod+Shift+m move scratchpad
bindsym $mod+Ctrl+m scratchpad show; resize set 98ppt 30ppt; move position 15px 610px;
bindsym $mod+m scratchpad show; resize set 98ppt 98ppt; move position center;

## {{{ ## Special keys ##

