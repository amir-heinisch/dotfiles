# {{{ # Input #

# NOTE! For naming see: swaymsg -t get_inputs

input type:keyboard {
	xkb_layout de
	xkb_options ctrl:nocaps
	repeat_delay 200
	repeat_rate 20
}

input type:touch {
	map_to_output $laptop
}

input type:touchpad {
	tap enabled
	natural_scroll enabled
#	dwt enabled
# scroll_factor
#	middle_emulation enabled
}

