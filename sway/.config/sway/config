# {{{ # Modes #

## {{{ ## Monitors ##

set $mode_monitor monitors: (0) Setups (1) eDP-1 (2) HDMI-1 (3) HDMI-2 (4) DP-1 (5) DP-2
bindsym $mod+d mode "$mode_monitor"
mode "$mode_monitor" {
	bindsym 0 mode "$mode_monitor_setups"
	bindsym 1 mode "$mode_internal_monitor"
	bindsym 3 mode "$mode_external_monitor_hdmi2"
	bindsym 4 mode "$mode_external_monitor_dp1"
	bindsym 5 mode "$mode_external_monitor_dp2"

	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym q mode "default"
}

set $mode_monitor_setups Setups: (0) Reset (1) Home (2) HomeEx (3) Work (4) University
mode "$mode_monitor_setups" {
	bindsym 0 mode "$mode_monitor", exec xrandr --output eDP-1 --auto --output HDMI-1 --off  --output HDMI-2 --off  --output DP-1 --off --output DP-2 --off
	bindsym 1 mode "$mode_monitor", exec xrandr --output eDP-1 --off  --output HDMI-1 --auto --output HDMI-2 --auto --right-of HDMI-1 --output DP-1 --off --output DP-2 --off
	bindsym 2 mode "$mode_monitor", exec xrandr --output eDP-1 --auto --output HDMI-1 --auto --right-of eDP-1 --output HDMI-2 --auto --right-of HDMI-1
	bindsym 3 mode "$mode_monitor", exec xrandr --output eDP-1 --auto --output HDMI-1 --off  --output HDMI-2 --off  --output DP-1 --off --output DP-2 --off
	bindsym 4 mode "$mode_monitor", exec xrandr --output eDP-1 --auto --output HDMI-1 --off  --output HDMI-2 --off  --output DP-1 --auto --above eDP-1 --output DP-2 --off

	bindsym Return mode "$mode_monitor"
	bindsym Escape mode "$mode_monitor"
	bindsym q mode "$mode_monitor"
}

set $mode_internal_monitor Internal (eDP-1) [a,o,n,i,l,r]
mode "$mode_internal_monitor" {
	bindsym a mode "$mode_monitor", exec xrandr --output eDP-1 --auto
	bindsym o mode "$mode_monitor", exec xrandr --output eDP-1 --off
	bindsym n mode "$mode_monitor", exec xrandr --output eDP-1 --rotate normal
	bindsym i mode "$mode_monitor", exec xrandr --output eDP-1 --rotate inverted
	bindsym l mode "$mode_monitor", exec xrandr --output eDP-1 --rotate left
	bindsym r mode "$mode_monitor", exec xrandr --output eDP-1 --rotate right

	bindsym Return mode "$mode_monitor"
	bindsym Escape mode "$mode_monitor"
	bindsym q mode "$mode_monitor"
}

set $mode_external_monitor_hdmi1 HDMI-1 [a,o,n,i,l,r]
mode "$mode_external_monitor_hdmi1" {
	bindsym a mode "$mode_monitor", exec xrandr --output HDMI-1 --auto
	bindsym o mode "$mode_monitor", exec xrandr --output HDMI-1 --off
	bindsym n mode "$mode_monitor", exec xrandr --output HDMI-1 --rotate normal
	bindsym i mode "$mode_monitor", exec xrandr --output HDMI-1 --rotate inverted
	bindsym l mode "$mode_monitor", exec xrandr --output HDMI-1 --rotate left
	bindsym r mode "$mode_monitor", exec xrandr --output HDMI-1 --rotate right

	bindsym Return mode "$mode_monitor"
	bindsym Escape mode "$mode_monitor"
	bindsym q mode "$mode_monitor"
}

set $mode_external_monitor_hdmi2 HDMI-2 [a,o,n,i,l,r]
mode "$mode_external_monitor_hdmi2" {
	bindsym a mode "$mode_monitor", exec xrandr --output HDMI-2 --auto
	bindsym o mode "$mode_monitor", exec xrandr --output HDMI-2 --off
	bindsym n mode "$mode_monitor", exec xrandr --output HDMI-2 --rotate normal
	bindsym i mode "$mode_monitor", exec xrandr --output HDMI-2 --rotate inverted
	bindsym l mode "$mode_monitor", exec xrandr --output HDMI-2 --rotate left
	bindsym r mode "$mode_monitor", exec xrandr --output HDMI-2 --rotate right

	bindsym Return mode "$mode_monitor"
	bindsym Escape mode "$mode_monitor"
	bindsym q mode "$mode_monitor"
}

set $mode_external_monitor_dp1 DP-1 [a,o,n,i,l,r]
mode "$mode_external_monitor_dp1" {
	bindsym a mode "$mode_monitor", exec xrandr --output DP-1 --auto
	bindsym o mode "$mode_monitor", exec xrandr --output DP-1 --off
	bindsym n mode "$mode_monitor", exec xrandr --output DP-1 --rotate normal
	bindsym i mode "$mode_monitor", exec xrandr --output DP-1 --rotate inverted
	bindsym l mode "$mode_monitor", exec xrandr --output DP-1 --rotate left
	bindsym r mode "$mode_monitor", exec xrandr --output DP-1 --rotate right

	bindsym Return mode "$mode_monitor"
	bindsym Escape mode "$mode_monitor"
	bindsym q mode "$mode_monitor"
}

set $mode_external_monitor_dp2 DP-2 [a,o,n,i,l,r]
mode "$mode_external_monitor_dp2" {
	bindsym a mode "$mode_monitor", exec xrandr --output DP-2 --auto
	bindsym o mode "$mode_monitor", exec xrandr --output DP-2 --off
	bindsym n mode "$mode_monitor", exec xrandr --output DP-2 --rotate normal
	bindsym i mode "$mode_monitor", exec xrandr --output DP-2 --rotate inverted
	bindsym l mode "$mode_monitor", exec xrandr --output DP-2 --rotate left
	bindsym r mode "$mode_monitor", exec xrandr --output DP-2 --rotate right

	bindsym Return mode "$mode_monitor"
	bindsym Escape mode "$mode_monitor"
	bindsym q mode "$mode_monitor"
}

## }}}

## {{{ ## Resize ##

set $mode_resize resize
bindsym $mod+r mode "$mode_resize"
mode "$mode_resize" {
	bindsym Left resize shrink width 10 px or 1 ppt
	bindsym Down resize grow height 10 px or 1 ppt
	bindsym Up resize shrink height 10 px or 1 ppt
	bindsym Right resize grow width 10 px or 1 ppt

	bindsym Shift+Left resize shrink width 20 px or 5 ppt
	bindsym Shift+Down resize grow height 20 px or 5 ppt
	bindsym Shift+Up resize shrink height 20 px or 5 ppt
	bindsym Shift+Right resize grow width 20 px or 5 ppt

	bindsym 1 mode "default", resize set 1000 600
	bindsym 2 mode "default", resize set 1500 600
	bindsym 3 mode "default", resize set 1200 1000

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

## }}}

# }}}

