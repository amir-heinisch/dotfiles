## {{{ ## Bottom bar ##

bar {
	position bottom
	output *
	height 50
	gaps 0
	mode hide
	hidden_state hide
	modifier $mod
	tray_output $laptop
	tray_padding 15px
	#tray_bindsym button1 ContextMenu
	#tray_bindsym button3 Activate
	binding_mode_indicator no
	workspace_buttons yes
	#workspace_min_width 60
	strip_workspace_numbers no
	strip_workspace_name no

	colors {
		statusline #F9FAF9
		background #00000000
		separator  #00000000

		#                  BORDER       BACKGROUND  TEXT
		focused_workspace  #222D31      #16A085     #222D31
		active_workspace   #595B5B      #353836     #FDF6E3
		inactive_workspace #595B5B      #222D31     #F9FAF9
		urgent_workspace   #595B5B      #222D31     #E74C3C
		binding_mode       #E5201D      #E74C3C     #F9FAF9
	}
}

